@model JefeModel

@{
    ViewData["Title"] = "Alta de jefe";
}

<div class="container mt-4">
    <div class="text-center mb-4">
        <h1 class="display-4">Insertar un jefe nuevo</h1>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <form asp-controller="Encargado" asp-action="JefesAdd" method="post">
        <div class="mb-3">
            <label asp-for="NombreJefe" class="form-label">Nombre del jefe</label>
            <input asp-for="NombreJefe" class="form-control" placeholder="Escriba el nombre" />
            <span asp-validation-for="NombreJefe" class="text-danger"></span>
        </div>
        
        <div class="mb-3">
            <label asp-for="Departamento" class="form-label">Departamento</label>
            <input asp-for="Departamento" class="form-control" placeholder="Escriba el departamento" />
            <span asp-validation-for="Departamento" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Sueldo" class="form-label">Sueldo</label>
            <input asp-for="Sueldo" class="form-control" placeholder="Escriba el sueldo" />
            <span asp-validation-for="Sueldo" class="text-danger"></span>
        </div>
        
        <div class="mb-3">
            <button type="submit" class="btn btn-outline-primary me-2">Guardar</button>
            <a asp-controller="Encargado" asp-action="MenuEnc" class="btn btn-outline-secondary">Regresar</a>
        </div>
    </form>
</div>
